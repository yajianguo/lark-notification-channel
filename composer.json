{
    "name": "yajianguo/lark-notification-channel",
    "description": "Lark Notifications driver",
    "homepage": "https://github.com/yajianguo/lark-notification-channel",
    "license": "MIT",
    "authors": [
        {
            "name": "yajianguo",
            "email": "a@b.com"
        }
    ],
    "require": {
        "php": "^7.2.5 || ^8.0",
        "guzzlehttp/guzzle": "^6.2 || ^7.0",
        "illuminate/notifications": "^6.0 || ^7.0 || ^8.0",
        "illuminate/support": "^6.0 || ^7.0 || ^8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^9.0",
        "orchestra/testbench": "^4.0 || ^5.0 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Lark\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\Lark\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:ci": "phpunit --coverage-clover=coverage.xml"
    },
    "config": {
        "sort-packages": true
    }
}
